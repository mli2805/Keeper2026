<Window x:Class="KeeperWpf.InvestmentAssetsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:keeperWpf="clr-namespace:KeeperWpf"
        mc:Ignorable="d"
        Height="450" SizeToContent="Width" WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance keeperWpf:InvestmentAssetsViewModel}">
    <Window.Resources>
        <Style x:Key="RightAligned" TargetType="DataGridCell">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,5, 0"/>
        </Style>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="PreviewKeyDown">
            <cal:ActionMessage MethodName="OnPreviewKeyDown">
                <cal:Parameter Value="$eventArgs" />
            </cal:ActionMessage>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <DataGrid ItemsSource="{Binding Assets}" IsReadOnly="True"
                  cal:Message.Attach="[Event MouseDoubleClick] = [Action EditAsset]"
                  SelectedItem="{Binding SelectedAsset}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="30" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Тикер" Width="80" Binding="{Binding Ticker}" />
                <DataGridTextColumn Header="Актив" Width="200" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Рынок" Width="50" Binding ="{Binding StockMarket}" />
                <DataGridTextColumn Header="Тип" Width="60" Binding="{Binding AssetType}"/>
                <DataGridTextColumn Header="Номинал" Width="60" Binding="{Binding NominalStr}" />
                <DataGridTextColumn Header="Купон" Width="50" Binding="{Binding CouponRateStr}" CellStyle="{StaticResource RightAligned}"/>
                <DataGridTextColumn Header="Предыд выплата" Width="110" Binding="{Binding PreviousCouponDateStr}" CellStyle="{StaticResource RightAligned}"/>
                <DataGridTextColumn Header="Период" Width="65" Binding="{Binding BondCouponPeriodStr}" CellStyle="{StaticResource RightAligned}"/>
                <DataGridTextColumn Header="Дата окончания" Width="110" Binding="{Binding BondExpirationDateStr}" CellStyle="{StaticResource RightAligned}"/>
                <DataGridTextColumn Header="Комментарий" Width="400" Binding="{Binding Comment}" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Изменить"
                              cal:Message.Attach="[Event Click] = [Action EditAsset]"
                              BorderBrush="{x:Null}" Background="White" />
                    <MenuItem Header="Статистика"
                              cal:Message.Attach="[Event Click] = [Action ShowAssetStatistics]"
                              BorderBrush="{x:Null}" Background="White" />
                    <MenuItem Header="Анализ"
                              cal:Message.Attach="[Event Click] = [Action ShowAssetAnalysis]"
                              BorderBrush="{x:Null}" Background="White" />
                    <Separator/>
                    <MenuItem Header="Добавить"
                              cal:Message.Attach="[Event Click] = [Action AddNewAsset]"
                              BorderBrush="{x:Null}" Background="White" />

                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
