        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <TabControl SelectedIndex="2">
        <TabItem Header="Напоминания об оплатах">
            <ContentControl x:Name="DateMemoSetterViewModel"/>
        </TabItem>
        <TabItem Header="Нижний предел остатка по картам">
            <ContentControl x:Name="CardBalanceMemoViewModel"/>
        </TabItem>
        <TabItem Header="Пределы платежей по картам">
            <ContentControl x:Name="CardPaymentsLimitsViewModel"/>
        </TabItem>
    </TabControl>
</Window>
