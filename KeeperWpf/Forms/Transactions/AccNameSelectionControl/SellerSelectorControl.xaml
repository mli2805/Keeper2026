<UserControl x:Class="KeeperWpf.SellerSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:keeperWpf="clr-namespace:KeeperWpf"
             mc:Ignorable="d" 
             cal:Bind.ModelWithoutContext="{Binding .}" 
             d:DesignWidth="400" d:DataContext="{d:DesignData SellerSelectorVm}">
    <DockPanel Margin="0,16,0,16">
        <keeperWpf:ComboBoxTreeView DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Background="White" 
                                     Height="25" ItemTemplate="{StaticResource ComboBoxTreeViewDataTemplate}"
                                     IsBranchSelectionEnabled="False"
                                     ItemsSource="{Binding AvailableAccNames}" 
                                     SelectedItem="{Binding MyAccName, Mode=TwoWay}" />

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal"     
                        VerticalAlignment="Top" HorizontalAlignment="Left">
                <Label Content="{Binding ControlTitle}" Margin="0,0,20,0" VerticalAlignment="Top"/>
                <ItemsControl ItemsSource="{Binding Buttons}" Margin="0,5,0,0" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"  />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type keeperWpf:AccNameButtonVm}">
                            <Button Content="{Binding Name}"
                                    Margin="0,0,4,0" Style="{StaticResource RoundCorner}"
                                    Click="ButtonBase_OnClick"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0, 0, 2">
                <Label Content="маги" Margin="32, 0,0,0"></Label>
                <keeperWpf:ComboBoxTreeView Height="20" FontSize="11" Width="160" IsBranchSelectionEnabled="False" 
                                             ItemTemplate="{StaticResource ComboBoxTreeViewDataTemplate}"  
                                             ItemsSource="{Binding Shops}" 
                                             SelectedItem="{Binding SelectedShop, Mode=TwoWay}"   />
                <Label Content="меды" Margin="22, 0,0,0"></Label>
                <keeperWpf:ComboBoxTreeView Height="20" FontSize="11" Width="160" IsBranchSelectionEnabled="False"
                                             ItemTemplate="{StaticResource ComboBoxTreeViewDataTemplate}"  
                                             ItemsSource="{Binding Meds}" 
                                             SelectedItem="{Binding SelectedMed, Mode=TwoWay}"   />
            </StackPanel>

        </StackPanel>

    </DockPanel>
</UserControl>
