<UserControl x:Class="KeeperWpf.NewExpenseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:keeperWpf="clr-namespace:KeeperWpf"
             cal:Bind.ModelWithoutContext="{Binding .}"
             mc:Ignorable="d" 
             d:DesignWidth="500" d:DataContext="{d:DesignData NewExpenseControlVm}">
    <Grid>
        <StackPanel Background="#FFFFF8F8">
            <keeperWpf:AccNameSelectorView DataContext="{Binding MyAccNameSelectorVm}" 
                                            Width="450" Margin="2,0,2,0"/>
            <Grid>
                <ComboBox ItemsSource="{Binding PaymentWays}" SelectedItem="{Binding SelectedPaymentWay, Mode=TwoWay}" 
                          Width="190" HorizontalAlignment="Left" Margin="70,0,0,0" Height="22"/>
                <Label Content="{Binding MyAccountBalance}" Height="30" HorizontalAlignment="Right" Margin="0,5,15,0"/>
            </Grid>

            <keeperWpf:SellerSelectorControl DataContext="{Binding CounterpartySelectorVm}" 
                                              Margin="2,2, 2, 10"/>

            <keeperWpf:AmountInputControl DataContext="{Binding MyAmountInputControlVm}" Margin="5,0,0,0"/>
            <Label Content="{Binding AmountInUsd}" HorizontalAlignment="Left" Height="30" Width="176" 
                   Margin="85,0,0,10" Foreground="Red"/>

            <Button Name="Receipt" VerticalAlignment="Top" Height="20" Width="100" Margin="320,-70,0,0" 
                    Background="White" IsEnabled="{Binding IsAddMode}" >Чек</Button>
            <Button Name="Fuelling" VerticalAlignment="Top" Height="20" Width="100" Margin="320,-40,0,0" Background="White" IsEnabled="{Binding IsAddMode}" >Заправка</Button>

            <keeperWpf:AccNameSelectorView DataContext="{Binding CategorySelectorVm}" Margin="2"/>

            <keeperWpf:TagPicker DataContext="{Binding MyTagPickerVm}" Margin="2,10,2,0"/>

            <DockPanel Margin="0,40,0,2">
                <keeperWpf:DatePickerWithTriangles DataContext="{Binding MyDatePickerVm}" />
            </DockPanel>
        </StackPanel>  
    </Grid>
</UserControl>
