<Window x:Class="KeeperWpf.OneTranView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:keeperWpf="clr-namespace:KeeperWpf"
        mc:Ignorable="d"
        xml:lang="ru-RU"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" 
        Top="{Binding Top, Mode=TwoWay}" Left="{Binding Left, Mode=TwoWay}" 
        Width="{Binding Width, Mode=OneWayToSource}" 
        Height="{Binding Height, Mode=OneWayToSource}" 
        d:DataContext="{d:DesignInstance keeperWpf:OneTranViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="22"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <keeperWpf:NewExpenseControl Margin="20,0,10,0" DataContext="{Binding MyNewExpenseControlVm}" 
                                       Visibility="{Binding Visibility}"/>
            <keeperWpf:IncomeControl Margin="20,0,10,0" DataContext="{Binding MyIncomeControlVm}" 
                                      Visibility="{Binding Visibility}"/>
            <keeperWpf:TransferControl Margin="20,0,10,0" DataContext="{Binding MyTransferControlVm}" 
                                        Visibility="{Binding Visibility}"/>
            <keeperWpf:ExchangeControl Margin="20,0,10,0" DataContext="{Binding MyExchangeControlVm}" 
                                        Visibility="{Binding Visibility}"/>


            <Label Content="Примечание" HorizontalAlignment="Left" Margin="20,10,0,0" Height="24"/>
            <TextBox Name="Comment" HorizontalAlignment="Stretch" Margin="20,0,10,0" MaxWidth="460" VerticalScrollBarVisibility="Auto"
                 Text="{Binding TranInWork.Comment,  UpdateSourceTrigger=PropertyChanged}" Height="54" TextWrapping="WrapWithOverflow"/>

            <DockPanel Height="25" Margin="20,20,20,10">
                <Button DockPanel.Dock="Right" Name="Cancel" Padding="7,0" Content="Отменить" Background="Transparent" IsCancel="True"/>
                <Button DockPanel.Dock="Right" Name="OneMore" Margin="0,0,15,0" Padding="5,0" 
                        Content="И ещё одну" Background="Transparent" IsDefault="True"/>
                <Button DockPanel.Dock="Right" Name="Save" Margin="0,0,15,0" Padding="5,0" 
                        Content="Сохранить" Background="Transparent" IsDefault="True"/>
                <Button DockPanel.Dock="Left" Name="Calculator" Margin="15,-1,15,0" BorderThickness="0"  
                        Background="Transparent">
                    <Image Source="../../../Resources/mainmenu/calculator.png" Width="24" Height="24" />
                </Button>
                <TextBlock></TextBlock>
            </DockPanel>
        </StackPanel>

       
        <keeperWpf:OperationTypeView Grid.Column="1" Margin="0,10,7,55" DataContext="{Binding OperationTypeViewModel}"/>
    </Grid>
</Window>
