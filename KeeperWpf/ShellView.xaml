<Window x:Class="KeeperWpf.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >

    <StackPanel Background="White">
             <!-- если русские буквы билдятся с ошибкой убедиться, что файл сохранён в UTF-8 -->
        <TextBlock Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Привет, Caliburn Micro!</TextBlock>
        <TextBlock Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Text="{Binding Message}"></TextBlock>
    </StackPanel>

</Window>